rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // stores collection - read: anyone (for frontend dropdown), write: admin only
    match /stores/{storeId} {
      allow read: if true;
      allow write: if false; // Admin SDK bypasses rules, so seed script works
    }
    
    // fax_log collection - read/write: admin only (Cloud Functions use Admin SDK)
    match /fax_log/{logId} {
      allow read, write: if false; // Admin SDK only
    }

    // faxJobs collection - read: anyone (for frontend status polling), write: admin only
    match /faxJobs/{jobId} {
      allow read: if true;
      allow write: if false; // Admin SDK only (Cloud Functions)
    }

    // signedAcknowledgements collection - admin only
    match /signedAcknowledgements/{docId} {
      allow read, write: if false; // Admin SDK only
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
